<script>
	$(function () {
		window.bubbleOverview;
		window.bubbleDetail;

		render_overview = function(csv) {
			var height;
			if($('.tab-content').height()){
				height = $('.tab-content').height();
			} else if($('#container').height()){
				height = $('#container').height();
			}
			window.bubbleOverview = new BubbleChart(csv, $(window).width(), height, "#vis");
			window.bubbleOverview.start();
			window.bubbleOverview.display_group_all();
		};
		d3.csv("/<%= @csv_file %>", render_overview);

		render_detail = function(csv) {
			var width = $(window).width() * 0.224;
			window.bubbleDetail = new BubbleChart(csv, width, width / 2, ".sidebar-nav");
			window.bubbleDetail.start();
			window.bubbleDetail.display_group_all();
		};
		d3.csv("/<%= @csv_file %>", render_detail);
	})
</script>