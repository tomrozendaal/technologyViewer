<div class="row-fluid show-grid">
	<div class="span6">
		<div class="well">
			<h3>Total</h3>
			<table class="table table-bordered table-striped">
				<thead>
				    <tr>
						<th></th>
						<th>Technology</th>
						<th>Rating</th>
				    </tr>
			  	</thead>
			  	<tbody>
			  		<% @key = 0 %>
				    <% FasterCSV.foreach("public/#{@csv_file}", :headers => true) do |csv_obj| %>
				    	<% if @key < 5 %>
					    	<tr>
					    		<td><%= @key + 1 %></td>
								<td><%= link_to csv_obj['technology'].capitalize, "/#{full_category(csv_obj['category'])}/#{csv_obj['technology']}" %></td>
								<td><%= csv_obj['adoption'] %></td>
								<td width="40%"><div class="progress"><div class="bar" style="width: <%= (@key + 3) * 10 %>%;"></div></div></td>
							</tr>
						<% end %>
						<% @key = @key + 1 %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
